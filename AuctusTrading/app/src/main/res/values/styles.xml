<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/gilroy</item>
    </style>
    <style name="CustomButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gilroy</item>
        <item name="android:lineSpacingExtra">10sp</item>
    </style>
    <style name="BlueCustomButton" parent="CustomButton">
        <item name="android:textColor">#FFF</item>
        <item name="colorButtonNormal">@color/blueButtonColor</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="GreyCustomButton" parent="CustomButton">
        <item name="android:textColor">#333</item>
        <item name="colorButtonNormal">@color/lightGreyButtonColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="InputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/formInputGrey</item>
        <item name="boxStrokeColor">@color/formInputGrey</item>
        <item name="colorAccent">@color/formInputGrey</item>
        <item name="colorControlNormal">@color/formInputGrey</item>
        <item name="colorControlActivated">@color/formInputGrey</item>
    </style>

    <style name="InputControl" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/formInputGrey</item>

        <item name="boxStrokeColor">@color/formInputGrey</item>
        <item name="colorAccent">@color/formInputGrey</item>
        <item name="colorControlNormal">@color/formInputGrey</item>
        <item name="colorControlActivated">@color/formInputGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">10sp</item>
        <item name="android:paddingRight">10sp</item>
        <item name="android:textColor">@color/formInputGrey</item>
    </style>

</resources>
